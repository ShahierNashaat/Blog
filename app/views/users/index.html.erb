<h1>Here is a list of users</h1>
<div class="users-container">
    <% flash.each do |name, msg| -%>
        <%= content_tag :div, msg, class: name %>
    <% end -%>
    <% @users.each do |user| %>
        <a href="/users/<%= user.id%>" class="user-container">
            <div class="user-img black-border">
                <%= image_tag(user.photo) %>
            </div>
            <div class="user-overview black-border">
                <h2><%= user.name %></h2>
                <span>Number of posts: <%= user.posts_counter || 0 %></span>
            </div>
        </a>
    <% end %>
</div>